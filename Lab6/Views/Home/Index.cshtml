@model IEnumerable<Lab6.Models.Tweet>

@{
}





<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
</head>
<body>
    <div class="jumbotron text-center">
        <h1>CST8359 Tweeter</h1>
    </div>
    <div class="container">


        <div class="row">
            <div class="col-lg-12 col-sm-3">
                <h3>Post a comment!</h3>
                <form asp-controller="Home" asp-action="PostTweet" method="post">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" name="username" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Content</label>
                        <textarea type="text" name="content" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit Tweet" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-sm-3">
                <h3>Tweets</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-sm-3">
                <ul class="list-group">

                    @if (Model == null || Model.Count() == 0)
                    {
                        <li class="list-group-item">There are no tweets to display.</li>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <li class="list-group-item">@item.Content<br /><br />By: @item.Username<span class="badge">@item.TweetId</span></li>
                        }
                    }

                </ul>
                <hr />
                <footer>

                    <p>&copy; 2019 | Kevin Lai | lai00035@algonquinlive.com | 040812704</p>

                </footer>
            </div>

    </div>
        </div>
    </body>
</html>


                    



